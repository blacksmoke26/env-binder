AVAILABLE_PLUGINS=["auth","logging","monitoring","cache"]

# URL and endpoint examples
OAUTH_CALLBACK_URL="https://app.example.com/auth/callback"
WEBSOCKET_ENDPOINT="ws://localhost:3000/socket"

